pipeline {

    agent any
    
    triggers {
        githubPush()
    }

    environment {
        DOCKER_IMAGE_NAME = 'scicalc'
        GITHUB_REPO_URL = 'https://github.com/r3dacted42/calc-spe-miniproj.git'
    }

    stages {

        stage('Git Checkout') {
            steps {
                script {
                    git branch: 'master', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Compilation') {
            steps {
                sh "cd scicalc && ./mvnw clean install -DskipTests"
            }
        }

        stage('Testing') {
            steps {
                sh "cd scicalc && ./mvnw test"
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${DOCKER_IMAGE_NAME}", '.')
                }
            }
        }

        // stage('Push Docker Images') {
        //     steps {
        //         script{
        //             docker.withRegistry('', 'DockerHubCred') {
        //             sh 'docker tag calculator iiitb/calculator:latest'
        //             sh 'docker push iiitb/calculator'
        //             }
        //          }
        //     }
        // }
    }
}